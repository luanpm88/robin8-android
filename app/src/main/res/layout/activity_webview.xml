<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:background="@color/blue_custom"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_content_share"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/undefined_backgroud"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_share"
            style="@style/BottomTextViewStyle"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="分享赚钱" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp"
        android:background="@color/blue_custom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开始创作"
            android:textColor="@color/white_custom"
            android:textSize="@dimen/undefine_font_5" />

        <View
            android:id="@+id/line_middle"
            android:layout_width="0.4dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white_custom" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="参考文章"
            android:textColor="@color/white_custom"
            android:textSize="@dimen/undefine_font_5" />
    </LinearLayout>
</LinearLayout>
