<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="89"
            android:textColor="@color/black_custom"
            android:textSize="@dimen/undefine_font_5"/>

        <TextView
            android:id="@+id/tv_center_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="平均转发"
            android:textColor="@color/black_custom"
            android:textSize="@dimen/undefine_font_5"
            />

        <TextView
            android:id="@+id/tv_right_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="89"
            android:textColor="@color/black_custom"
            android:textSize="@dimen/undefine_font_5"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <com.robin8.rb.ui.widget.myprogress.RoundCornerProgressBar
                android:id="@+id/pro_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="2.5dp"
                app:rcBackgroundPadding="2dp"
                app:rcMax="100"
                app:rcProgress="0"
                app:rcBackgroundColor="@color/white_custom"
                app:rcProgressColor="@color/yellow_ffc701"
                app:rcRadius="10dp"
                app:rcRadiusBg="10dp"
                app:rcReverse="true"
                app:rcSecondaryProgress="100"
                app:rcSecondaryProgressColor="@color/gray_e4e4e4"/>

            <com.robin8.rb.ui.widget.myprogress.RoundCornerProgressBar
                android:id="@+id/pro_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="2.5dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                app:rcBackgroundColor="@color/white_custom"
                app:rcBackgroundPadding="2dp"
                app:rcMax="100"
                app:rcProgress="0"
                app:rcProgressColor="@color/yellow_ffc701"
                app:rcRadius="10dp"
                app:rcRadiusBg="10dp"
                app:rcSecondaryProgress="100"
                app:rcSecondaryProgressColor="@color/gray_e4e4e4"/>
        </LinearLayout>


        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_gray_white_oval"/>
    </RelativeLayout>
</LinearLayout>