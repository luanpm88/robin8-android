<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/undefined_backgroud"
    android:orientation="vertical">

    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:id="@+id/ll_et_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white_custom"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写年龄"
            android:inputType="text"
            android:maxLength="22"
            android:singleLine="true"
            android:textColor="@color/sub_black_custom"
            android:textColorHint="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_5" />

        <TextView
            android:id="@+id/tv_et_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/22"
            android:textColor="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_4" />
    </LinearLayout>


    <RelativeLayout
        android:background="@color/white_custom"
        android:visibility="gone"
        android:id="@+id/rl_et_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/et_desc"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请填写简介"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:textColor="@color/sub_black_custom"
            android:textColorHint="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_5" />

        <TextView
            android:id="@+id/tv_desc_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="0/100"
            android:textColor="@color/sub_gray_custom" />
    </RelativeLayout>


    <com.robin8.rb.ui.widget.OtherGridView
        android:visibility="gone"
        android:id="@+id/gv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8.5dp"
        android:layout_marginRight="8.5dp"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:verticalSpacing="15dp" />
</LinearLayout>