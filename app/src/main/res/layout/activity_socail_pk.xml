    <!--&lt;!&ndash;android:scrollingCache="false"/>&ndash;&gt;-->
    <!--</LinearLayout>-->
    <!--</com.robin8.rb.ui.widget.ClashScrollView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_custom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_to_campaign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="影响力变现"
            android:textColor="@color/white_custom"
            android:textSize="@dimen/undefine_font_4"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@color/white_custom"/>

        <TextView
            android:id="@+id/tv_to_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="和微信朋友PK"
            android:textColor="@color/white_custom"
            android:textSize="@dimen/undefine_font_4"/>
    </LinearLayout>
</LinearLayout>
