<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robin230"
        android:textColor="@color/sub_black_custom"
        android:textSize="@dimen/undefine_font_5" />

    <EditText
        android:id="@+id/et_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/please_write_alipay_account"
        android:inputType="text"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:textColor="@color/sub_black_custom"
        android:textColorHint="@color/sub_gray_custom"
        android:textSize="@dimen/undefine_font_5" />
</LinearLayout>