<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.robin8.rb.activity.SetUserPwdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_72"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@null"
            android:hint="请输入密码（不少于6位）"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/gray_custom"
            android:textColorHint="@color/sub_gray_custom"/>

        <View
            style="@style/Undefined_Line"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"/>
         <EditText
            android:id="@+id/edit_user_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@null"
            android:hint="确认密码（请再次输入以上密码）"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/gray_custom"
            android:textColorHint="@color/sub_gray_custom"/>

        <View
            style="@style/Undefined_Line"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="*请牢记您的密码"/>
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/selector_bg_bt"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white_custom"
            android:textSize="@dimen/undefine_font_3" />

</LinearLayout>
</LinearLayout>
