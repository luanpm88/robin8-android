<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_custom"
        android:orientation="horizontal"
        android:padding="13dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_centerVertical="true"
            android:layout_weight="1.2"
            android:background="@color/sub_gray_custom"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="2"
                android:text=""
                android:textColor="@color/sub_black_custom"
                android:textSize="@dimen/undefine_font_3"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_gravity="center|left"
                android:lines="2"
                android:layout_weight="0.9"
                android:text="07.25 12:07:00 - 07.25 12:07:00"
                android:textColor="@color/sub_gray_custom"
                android:textSize="@dimen/undefine_font_2"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_credit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_black_custom"
                    android:textSize="@dimen/undefine_font_3"
                    android:visibility="invisible"
                    android:text="使用积分:"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/tv_consume"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text="活动预算:"
                    android:textColor="@color/sub_black_custom"
                    android:textSize="@dimen/undefine_font_3"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_custom"
        android:paddingBottom="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="13dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:background="@color/sub_gray_custom"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/undefined_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/white_custom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pay_instantly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_3"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/view_line"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/undefined_divide_line"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/robin253"
            android:textColor="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_3"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/undefined_divide_line"/>
</LinearLayout>