<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_custom"
        android:paddingBottom="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="13dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:background="@color/sub_gray_custom" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textColor="@color/sub_black_custom" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="07.25 12:07:00 - 07.25 12:07:00"
            android:textColor="@color/sub_gray_custom" />

        <TextView
            android:id="@+id/tv_consume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="100"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_consume"
            android:text="活动预算: ¥ "
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_3" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/undefined_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/white_custom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pay_instantly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_3" />

        <View
            android:id="@+id/view_line"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/undefined_divide_line" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="撤销活动"
            android:textColor="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/undefined_divide_line" />
</LinearLayout>