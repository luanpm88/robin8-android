<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/bg_first_page"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo_robin8"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_first_pager_message"/>

            <TextView
                style="@style/text_view_with_single_line"
                android:textSize="12sp"
                android:text="系统通知"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/is_kol_page_row_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_indiana"
            android:layout_width="0dp"
            android:layout_height="@dimen/is_kol_page_row_frame_outside_height"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/is_kol_page_image_size"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    android:src="@mipmap/icon_gift"/>

            </LinearLayout>

            <TextView
                style="@style/text_view_with_single_line"
                android:text="夺宝去!"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_total_income"
            android:layout_width="130dp"
            android:layout_height="@dimen/is_kol_page_row_frame_outside_height"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/text_view_with_single_line"
                        android:text="¥"
                        android:textColor="#ff241f"/>

                    <TextView
                        android:id="@+id/tv_total_income"
                        style="@style/text_view_with_single_line"
                        android:text="0"
                        android:textColor="#ff241f"
                        android:textSize="40sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/text_view_with_single_line"
                android:text="累积赚到"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sign_in"
            android:layout_width="0dp"
            android:layout_height="@dimen/is_kol_page_row_frame_outside_height"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/iv_sign_in"
                            android:layout_width="@dimen/is_kol_page_image_size"
                            android:layout_height="@dimen/is_kol_page_image_size"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon_checkin"/>

                        <TextView
                            android:id="@+id/tv_sign_in"
                            style="@style/text_view_with_single_line"
                            android:layout_toRightOf="@id/iv_sign_in"
                            android:text="×0"/>

                    </RelativeLayout>

                    <TextView
                        style="@style/text_view_with_single_line"
                        android:text="每日签到"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/is_kol_page_row_height"
        android:background="#1E91AC"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_ongoing_campaigns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ongoing_campaigns"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    style="@style/text_view_with_single_line"
                    android:text="0"
                    android:textColor="#424344"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="进行中活动"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_completed_campaigns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_completed_campaigns"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#424344"
                    style="@style/text_view_with_single_line"
                    android:textSize="@dimen/is_kol_page_text_size_large"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="已完成的活动"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_completed_campaigns_income"
                style="@style/text_view_with_single_line"
                android:text="¥0"
                android:textColor="#ff241f"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_campaigns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/is_kol_page_image_size"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    android:src="@mipmap/icon_share"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="去分享活动"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/is_kol_page_row_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_ongoing_product_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ongoing_products"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    style="@style/text_view_with_single_line"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="进行中产品分享"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_completed_product_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_completed_products"
                    style="@style/text_view_with_single_line"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/is_kol_page_text_size_large"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="已卖出产品"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_completed_products_income"
                style="@style/text_view_with_single_line"
                android:text="¥0"
                android:textColor="#ff241f"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/is_kol_page_image_size"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    android:src="@mipmap/icon_share"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="去分享产品"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/is_kol_page_row_height"
        android:background="#1E91AC"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_ongoing_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ongoing_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    style="@style/text_view_with_single_line"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#424344"
                    android:textSize="20sp"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="进行中邀请"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_completed_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_completed_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    style="@style/text_view_with_single_line"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#424344"
                    android:textSize="@dimen/is_kol_page_text_size_large"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="已完成邀请"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_completed_invite_income"
                style="@style/text_view_with_single_line"
                android:text="¥0"
                android:textColor="#ff241f"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/is_kol_page_row_frame_inside_height"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/is_kol_page_image_size"
                    android:layout_height="@dimen/is_kol_page_image_size"
                    android:src="@mipmap/icon_share"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="去邀请KOL"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_view_with_single_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="今日任务:"
            android:textColor="#1CBC20"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_check_sign_in"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_unchecked"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="今天签到"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_check_share_campaigns"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_unchecked"/>


                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="分享一项活动"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_check_share_products"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_checked"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="分享一款产品"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
