<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/bg_first_page"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo_robin8"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_first_pager_message"/>

            <TextView
                style="@style/text_view_with_single_line"
                android:textSize="12sp"
                android:text="系统通知"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/is_kol_page_row_padding"
        android:paddingTop="@dimen/is_kol_page_row_padding">

        <RelativeLayout
            android:id="@+id/rl_indiana"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/is_kol_page_image_size"
                android:layout_height="@dimen/is_kol_page_image_size"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_gift"/>

            <TextView
                style="@style/text_view_with_single_line"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="夺宝去!"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_total_income"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_total_income"
                style="@style/text_view_with_single_line"
                android:text="0"
                android:textColor="@color/mine_yellow_custom"
                android:textSize="30sp"
                android:layout_centerInParent="true"/>

            <TextView
                style="@style/text_view_with_single_line"
                android:text="¥"
                android:textColor="@color/mine_yellow_custom"
                android:layout_alignBottom="@id/tv_total_income"
                android:layout_toLeftOf="@id/tv_total_income"/>

            <TextView
                style="@style/text_view_with_single_line"
                android:text="累积赚到"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sign_in"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_sign_in"
                android:layout_width="@dimen/is_kol_page_image_size"
                android:layout_height="@dimen/is_kol_page_image_size"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_checkin"/>

            <TextView
                android:id="@+id/tv_sign_in"
                style="@style/text_view_with_single_line"
                android:layout_toRightOf="@id/iv_sign_in"
                android:layout_alignTop="@id/iv_sign_in"
                android:text="×0"/>

            <TextView
                style="@style/text_view_with_single_line"
                android:text="每日签到"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

            </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1E91AC"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/is_kol_page_row_padding"
        android:paddingTop="@dimen/is_kol_page_row_padding">

        <RelativeLayout
            android:id="@+id/rl_ongoing_campaigns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_ongoing_campaigns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/text_view_with_single_line"
                android:text="0"
                android:textColor="#424344"
                android:textSize="@dimen/is_kol_page_text_size_large"/>

            <TextView
                android:id="@+id/tv_ongoing_campaigns_bottom"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                style="@style/text_view_with_single_line"
                android:text="进行中活动"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_completed_campaigns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

            <TextView
                android:id="@+id/tv_completed_campaigns"
                style="@style/text_view_with_single_line"
                android:text="0"
                android:layout_centerInParent="true"
                android:textColor="#424344"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/is_kol_page_text_size_large"/>

            <TextView
                android:id="@+id/tv_completed_campaigns_income"
                style="@style/text_view_with_single_line"
                android:text="¥0"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/mine_yellow_custom"/>

            <TextView
                android:id="@+id/tv_completed_campaigns_bottom"
                style="@style/text_view_with_single_line"
                android:text="已完成活动"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_share_campaigns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_share_campaigns"
                android:layout_width="@dimen/is_kol_page_image_size"
                android:layout_height="@dimen/is_kol_page_image_size"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_share"/>

            <TextView
                android:id="@+id/tv_share_campaigns_bottom"
                style="@style/text_view_with_single_line"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="去分享活动"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/is_kol_page_row_padding"
        android:paddingTop="@dimen/is_kol_page_row_padding">

        <RelativeLayout
            android:id="@+id/rl_ongoing_product_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_ongoing_products"
                style="@style/text_view_with_single_line"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/is_kol_page_text_size_large"/>

            <TextView
                android:id="@+id/tv_ongoing_products_bottom"
                style="@style/text_view_with_single_line"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="进行中产品分享"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_completed_product_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

            <TextView
                android:id="@+id/tv_completed_products"
                style="@style/text_view_with_single_line"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/is_kol_page_text_size_large"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_completed_products_income"
                style="@style/text_view_with_single_line"
                android:text="¥0"
                android:textColor="@color/mine_yellow_custom"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_completed_products_bottom"
                style="@style/text_view_with_single_line"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="已卖出产品"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_share_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/is_kol_page_image_size"
                android:layout_height="@dimen/is_kol_page_image_size"
                android:src="@mipmap/icon_share"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_share_product_bottom"
                style="@style/text_view_with_single_line"
                android:text="去分享产品"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1E91AC"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/is_kol_page_row_padding"
        android:paddingTop="@dimen/is_kol_page_row_padding">

        <RelativeLayout
            android:id="@+id/rl_ongoing_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_ongoing_invite"
                style="@style/text_view_with_single_line"
                android:text="0"
                android:textColor="#424344"
                android:textSize="@dimen/is_kol_page_text_size_large"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_ongoing_invite_bottom"
                style="@style/text_view_with_single_line"
                android:text="进行中邀请"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_completed_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

            <TextView
                android:id="@+id/tv_completed_invite"
                style="@style/text_view_with_single_line"
                android:text="0"
                android:layout_centerInParent="true"
                android:textColor="#424344"
                android:textSize="@dimen/is_kol_page_text_size_large"/>

            <TextView
                android:id="@+id/tv_completed_invite_income"
                style="@style/text_view_with_single_line"
                android:text="¥0"
                android:textColor="@color/mine_yellow_custom"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_completed_invite_bottom"
                style="@style/text_view_with_single_line"
                android:text="已完成邀请"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_share_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/is_kol_page_image_size"
                android:layout_height="@dimen/is_kol_page_image_size"
                android:src="@mipmap/icon_share"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_share_invite_bottom"
                style="@style/text_view_with_single_line"
                android:text="去邀请朋友"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_view_with_single_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="今日任务:"
            android:textColor="#1CBC20"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_check_sign_in"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_unchecked"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="今天签到"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_check_share_campaigns"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_unchecked"/>


                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="分享一项活动"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_check_share_products"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_unchecked"/>

                <TextView
                    style="@style/text_view_with_single_line"
                    android:text="分享一款产品"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
