<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_custom"
    android:orientation="vertical"
    tools:context=".ui.activity.ChangeHttpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_custom"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

     <TextView
         android:id="@+id/tv_now"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:lineSpacingExtra="2dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:lineSpacingMultiplier="1.5"
         android:text=""
         android:textColor="@color/yellow_custom"
         android:textSize="@dimen/undefine_font_6"/>
        <!--<TextView-->
         <!--android:layout_width="match_parent"-->
         <!--android:layout_height="wrap_content"-->
         <!--android:lineSpacingExtra="2dp"-->
         <!--android:paddingTop="10dp"-->
         <!--android:paddingBottom="10dp"-->
         <!--android:lineSpacingMultiplier="1.5"-->
         <!--android:text="http://"-->
         <!--android:textColor="@color/black_custom"-->
         <!--android:textSize="@dimen/undefine_font_6"/>-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_custom"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/edit_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@null"
            android:inputType="textUri"
            android:padding="10dp"
            android:singleLine="true"
            android:text=""
            android:hint="@string/robin056"
            android:textColor="@color/pickerview_timebtn_nor"
            android:textColorHint="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_6"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/icons_delete"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_5"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_custom"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/tv_name_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:lineSpacingMultiplier="1.5"
            android:text="http://"
            android:textColor="@color/black_custom"
            android:textSize="@dimen/undefine_font_6"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edit_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name_two"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="15"
            android:padding="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/pickerview_timebtn_nor"
            android:textColorHint="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_6"/>
        <TextView
            android:id="@+id/tv_delete_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/icons_delete"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_5"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_three"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_custom"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/tv_name_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:lineSpacingMultiplier="1.5"
            android:text="https://"
            android:textColor="@color/black_custom"
            android:textSize="@dimen/undefine_font_6"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edit_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name_three"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="15"
            android:padding="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/pickerview_timebtn_nor"
            android:textColorHint="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_6"/>
        <TextView
            android:id="@+id/tv_delete_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/icons_delete"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_5"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
