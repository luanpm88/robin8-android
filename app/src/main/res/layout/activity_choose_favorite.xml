<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.robin8.rb.activity.uesr_msg.ChooseFavoriteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_custom"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_jump"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="跳过>"
                android:textColor="@color/gray_second"
                android:textSize="@dimen/undefine_font_3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_choose_favorite"
                    android:textColor="@color/black_404040"
                    android:textSize="@dimen/undefine_font_22"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="55dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/tv_find_for_you"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/undefine_font_5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="5dp">

                <com.robin8.rb.ui.widget.taglayout.TagFlowLayout
                    android:id="@+id/flow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:max_select="-1"/>
            </LinearLayout>


            <TextView
                android:id="@+id/text_next"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginBottom="55dp"
                android:layout_marginLeft="37.5dp"
                android:layout_marginRight="37.5dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/shape_blue_rectangular"
                android:gravity="center"
                android:text="@string/done"
                android:textColor="@color/white_custom"
                android:textSize="@dimen/undefine_font_4"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
