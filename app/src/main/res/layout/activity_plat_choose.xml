<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_custom"
    tools:context=".ui.activity.uesr_msg.PlatChooseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_custom"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/robin172"
            android:textColor="@color/gray_first"
            android:textSize="@dimen/undefine_font_3"/>
        <com.robin8.rb.ui.widget.OtherGridView
            android:id="@+id/gv_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:background="@color/white_custom"
            android:numColumns="4"
            android:verticalSpacing="20dp" />
    </LinearLayout>


</LinearLayout>
