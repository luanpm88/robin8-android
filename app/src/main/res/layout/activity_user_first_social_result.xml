<?xml version="1.0" encoding="utf-8"?>
<com.robin8.rb.ui.widget.ClashScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robin8.rb.module.social.UserFirstSocialResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_custom"
        android:orientation="vertical">
        
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_have_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include layout="@layout/social_result_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white_custom"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="我们发现您跟下面几位用户兴趣相投"
                android:textColor="@color/black_202020"
                android:textSize="@dimen/undefine_font_4"/>

            <com.robin8.rb.module.social.view.HorizontalListView
                android:id="@+id/list_recommend"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="为您推荐的品牌福利活动"
                android:textColor="@color/black_202020"
                android:textSize="@dimen/undefine_font_4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="转发有奖金，累计50元即可体现"
                android:textColor="@color/gray_656565"
                android:textSize="12sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/white_custom"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <com.robin8.rb.autoviewpager.AutoScrollViewPager
                android:id="@+id/vp_auto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/light_gray_custom"/>

            <LinearLayout
                android:id="@+id/ll_vp_points"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:translationY="-20dp"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_no_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_empty"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_8a8a8a"
                android:textSize="@dimen/undefine_font_4"
                android:text="我们正在紧锣密鼓的计算你的数据,以最好的形式展示,让你了解自己有多么重要"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="75dp"/>
        </LinearLayout>
    </LinearLayout>
</com.robin8.rb.ui.widget.ClashScrollView>
