<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
              android:layout_height="50.4dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/gray_custom"
            android:textSize="@dimen/undefine_font_5"
	        tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wechat_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
               android:background="@drawable/kol_icon_wechat"/>
             <TextView
                 android:id="@+id/tv_qq_icon"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/kol_icon_qq"/>
             <TextView
                 android:id="@+id/tv_weibo_icon"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/kol_icon_weibo"/>

        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/tv_content"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:singleLine="true"-->
        <!--android:ellipsize="end"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:text="&#45;&#45;"-->
        <!--android:gravity="right"-->
        <!--android:textColor="@color/gray_custom"-->
        <!--android:textSize="@dimen/undefine_font_5" />-->

        <TextView
            android:id="@+id/tv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_5"/>
    </LinearLayout>

    <View style="@style/Undefined_Line"/>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/undefined_backgroud"
        android:visibility="gone"/>
</LinearLayout>