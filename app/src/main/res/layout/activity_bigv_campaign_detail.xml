<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_custom"
    tools:context=".ui.module.bigv.activity.BigvCampaignDetailActivity">

    <com.robin8.rb.ui.widget.ClashScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="202.5dp">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="202.5dp"
                    android:background="@color/sub_gray_custom"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cover_transparent"/>

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:src="@mipmap/icon_btn_back_white"/>
            </RelativeLayout>

            <!--活动内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white_custom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_campaign_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:text="新款梅赛德斯 · 奔驰，追逐现代，天生无畏，给你不一样的体验"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="@dimen/undefine_font_a"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_campaigns_request"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/iv_author"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/social_gongzhonghao_on"/>

                    <TextView
                        android:id="@+id/tv_author_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="jack branch"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/undefine_font_2"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_brand_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="2dp"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="辟疆场，为先锋，梅赛德斯-奔驰GLA SUV，焕新设计, 气场强大，登场即成为众人的领路先锋！ 远离办公室，让久违的越野激情再度迸发，梅赛德斯-奔驰GLA SUV，将探险的乐趣纵情挥洒。 期待您与我们一起逐梦未来！"
                    android:textColor="@color/black_333333"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/undefine_font_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white_custom"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_time"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="活动时间："
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/undefine_font_4"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-09-12~2019-12-09"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/undefine_font_4"
                        />
                </LinearLayout>

                <View
                    style="@style/Undefined_Line"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_price"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="活动价格："
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/undefine_font_4"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000000"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/undefine_font_4"
                        />
                </LinearLayout>

                <View
                    style="@style/Undefined_Line"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_pre_kols_count"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="招募人数："
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/undefine_font_4"/>

                    <TextView
                        android:id="@+id/tv_pre_kols_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000000"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/undefine_font_4"
                        />
                </LinearLayout>

                <View
                    style="@style/Undefined_Line"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_plat"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="活动平台："
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/undefine_font_4"/>

                    <TextView
                        android:id="@+id/tv_plat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000000"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/undefine_font_4"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white_custom"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="合作中的KOL"
                    android:textColor="@color/gray_666666"
                    android:textSize="@dimen/undefine_font_3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_100"
                android:background="@color/white_custom"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌介绍"
                    android:textColor="@color/gray_666666"
                    android:textSize="@dimen/undefine_font_3"/>

                <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="品牌名称"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/undefine_font_3"/>

                <TextView
                    android:id="@+id/tv_brand_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="2dp"
                    android:text="四个字母分别代表着智能互联、自动驾驶、共享出行、电力驱动，这些趋势正在重塑出行行业的未来。“瞰思未来”是戴姆勒集团的企业发展战略，旨在通过这四大领域的智能整合，为客户带来便捷、安全、舒适的出行。"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/undefine_font_1"/>

            </LinearLayout>

        </LinearLayout>
    </com.robin8.rb.ui.widget.ClashScrollView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_dimen_size_44"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        app:cardBackgroundColor="@color/blue_custom"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        >

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="参加活动"
            android:textColor="@color/white_custom"
            android:textSize="@dimen/undefine_font_4"/>
    </android.support.v7.widget.CardView>
</FrameLayout>
