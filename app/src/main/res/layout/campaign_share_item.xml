<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="110dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_share_item_icon"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/login_weixin"/>

        <TextView
            android:id="@+id/tv_share_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_share_item_icon"
            android:textSize="@dimen/undefine_font_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="QQ好友"
            android:textColor="@color/black_5e5e5e"/>

    </RelativeLayout>
</LinearLayout>