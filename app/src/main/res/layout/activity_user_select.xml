<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_custom"
    android:orientation="vertical"
    tools:context=".ui.activity.uesr_msg.UserSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:background="@color/white_custom"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/layout_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/social_weibo"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="20dp"
                android:text="填写微博报价"
                android:textColor="@color/gray_first"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_icon_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/blue_2dcad0"
                    android:textSize="@dimen/undefine_font_3"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_go_weibo"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_go_next"
                    android:layout_gravity="center"/>
            </RelativeLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_ededed"/>

        <LinearLayout
            android:id="@+id/layout_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/social_weixin"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="20dp"
                android:text="填写微信报价"
                android:textColor="@color/gray_first"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_icon_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/blue_2dcad0"
                    android:textSize="@dimen/undefine_font_3"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_go_wechat"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_go_next"
                    android:layout_gravity="center"/>
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_ededed"/>
    </LinearLayout>

</LinearLayout>
