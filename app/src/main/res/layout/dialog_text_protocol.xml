<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_corner_bg_regular"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/robin_disclaimer"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_5"
            android:textStyle="bold" />

        <View
            style="@style/Undefined_Line"
            android:layout_width="280dp" />

        <ScrollView
            android:layout_width="280dp"
            android:layout_height="400dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.robin8.rb.ui.widget.AlignTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="@string/text_protocol"
                    android:textColor="@color/sub_black_custom"
                    android:textSize="@dimen/undefine_font_3" />
            </LinearLayout>
        </ScrollView>

        <View
            style="@style/Undefined_Line"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="@color/blue_custom" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/agree"
                android:textColor="@color/blue_custom"
                android:textSize="@dimen/undefine_font_5" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blue_custom" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reject"
                android:textColor="@color/blue_custom"
                android:textSize="@dimen/undefine_font_5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>