<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white_custom"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <View
        android:id="@+id/line_top"
        style="@style/Undefined_Line"/>

    <View
        android:id="@+id/view_up"
        style="@style/Undefined_Line"
        android:layout_height="8dp"
        android:background="@color/undefined_backgroud"/>

    <View
        android:id="@+id/line_up"
        style="@style/Undefined_Line"/>

    <LinearLayout
        android:id="@+id/ll_img"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            style="@style/Undefined_Line"
            android:layout_height="5dp"
            android:background="@color/undefined_backgroud"/>
        <ImageView
            android:id="@+id/img_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/tv_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_b"/>

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="个人资料"
            android:textColor="@color/sub_black_custom"
            android:textSize="@dimen/undefine_font_5"/>

        <TextView
            android:id="@+id/tv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_5"/>
    </LinearLayout>

    <View
        android:id="@+id/line_down"
        style="@style/Undefined_Line"
        android:layout_marginLeft="46dp"/>
</LinearLayout>