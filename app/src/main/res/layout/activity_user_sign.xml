<?xml version="1.0" encoding="utf-8"?>
<com.robin8.rb.ui.widget.ClashScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_custom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:background="@color/white_custom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@mipmap/pic_income_bg"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:id="@+id/ll_sign_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/shape_gray_rectangular_pane"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="4dp"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:paddingTop="4dp"
                                android:text="@string/sign_rule"
                                android:textColor="@color/gray_second"
                                android:textSize="@dimen/undefine_font_1"/>
                        </LinearLayout>

                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/shape_ring_sub_gray"/>

                        <com.robin8.rb.view.widget.CircleImageView
                            android:id="@+id/civ_image"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_user_defaul"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_4"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_has_signed_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="连续签到0天"
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_2"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计收益"
                        android:textColor="@color/gray_first"
                        android:textSize="@dimen/undefine_font_3"/>

                    <TextView
                        android:id="@+id/tv_earn_accumulated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="@color/yellow_ffad4c"
                        android:textSize="@dimen/undefine_font_5"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/gray_first"
                        android:textSize="@dimen/undefine_font_3"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray_first"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日收益"
                        android:textColor="@color/gray_first"
                        android:textSize="@dimen/undefine_font_3"/>

                    <TextView
                        android:id="@+id/tv_earn_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="@color/yellow_ffad4c"
                        android:textSize="@dimen/undefine_font_5"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/gray_first"
                        android:textSize="@dimen/undefine_font_3"/>

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="22dp"
                    android:background="@color/gray_f0f3f4"/>

                <com.robin8.rb.module.social.view.NoScrollGridView
                    android:id="@+id/sign_girdview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:numColumns="7"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_solid_blue"
                android:paddingBottom="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp"
                android:text="签到领奖励"
                android:textColor="@color/white_custom"
                android:textSize="@dimen/undefine_font_4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new_user_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white_custom"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_daily_tasks"
                android:drawablePadding="6dp"
                android:text="新手任务"
                android:textColor="@color/black_custom"
                android:textSize="@dimen/undefine_font_2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_complete_campaign"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="完成一个活动"
                    android:textColor="@color/black_custom"
                    android:textSize="@dimen/undefine_font_3"/>

                <TextView
                    android:id="@+id/tv_do_tasks"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_solid_blue"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="做任务"
                    android:textColor="@color/white_custom"
                    android:textSize="@dimen/undefine_font_2"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@color/gray_f0f3f4"
                        />

                    <TextView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:background="@drawable/shape_bg_circle_blue"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_09"/>

                    <TextView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="38.5dp"
                        android:background="@drawable/shape_bg_circle_blue"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_09"/>

                    <TextView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="77dp"
                        android:background="@drawable/shape_bg_circle_blue"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_09"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_new_tasks_one"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="首次分享内容  (0/1)      奖励： "
                        android:textColor="@color/gray_first"
                        android:textSize="@dimen/undefine_font_1"/>

                    <TextView
                        android:id="@+id/tv_new_tasks_two"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="查看截图示例  (0/1)      奖励： "
                        android:textColor="@color/gray_first"
                        android:textSize="@dimen/undefine_font_1"/>

                    <TextView
                        android:id="@+id/tv_new_tasks_three"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="首次上传截图  (0/1)      奖励： "
                        android:textColor="@color/gray_first"
                        android:textSize="@dimen/undefine_font_1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text=" ¥ 0.50"
                        android:textColor="@color/blue_custom"
                        android:textStyle="bold"
                        android:textSize="@dimen/undefine_font_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" ¥ 0.50"
                        android:textColor="@color/blue_custom"
                        android:textStyle="bold"
                        android:textSize="@dimen/undefine_font_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text=" ¥ 1.00"
                        android:textColor="@color/blue_custom"
                        android:textStyle="bold"
                        android:textSize="@dimen/undefine_font_1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@color/white_custom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_daily_tasks"
                android:drawablePadding="6dp"
                android:padding="15dp"
                android:text="每日任务"
                android:textColor="@color/black_custom"
                android:textSize="@dimen/undefine_font_2"/>

            <com.robin8.rb.module.social.view.LinearLayoutForListView
                android:id="@+id/lv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_custom"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:scrollingCache="false"/>

        </LinearLayout>
    </LinearLayout>


</com.robin8.rb.ui.widget.ClashScrollView>

