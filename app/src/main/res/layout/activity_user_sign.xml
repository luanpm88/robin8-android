<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/pic_income_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@color/transparent"
                    android:paddingRight="@dimen/title_bar_padding">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:src="@mipmap/icon_btn_back_white"/>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="每日签到"
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_7"/>

                    <LinearLayout
                        android:id="@+id/ll_sign_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_gray_rectangular_pane"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"
                            android:text="@string/sign_rule"
                            android:textColor="@color/white_dfdfdf"
                            android:textSize="@dimen/undefine_font_1"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/shape_ring_sub_gray"/>

                        <com.robin8.rb.view.widget.CircleImageView
                            android:id="@+id/civ_image"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_user_defaul"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_4"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_has_signed_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="连续签到0天"
                        android:textColor="@color/white_custom"
                        android:textSize="@dimen/undefine_font_2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计收益"
                            android:textColor="@color/gray_b6b6b6"
                            android:textSize="@dimen/undefine_font_3"/>

                        <TextView
                            android:id="@+id/tv_earn_accumulated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/yellow_ffad4c"
                            android:textSize="@dimen/undefine_font_5"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/gray_b6b6b6"
                            android:textSize="@dimen/undefine_font_3"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/gray_b6b6b6"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日收益"
                            android:textColor="@color/gray_b6b6b6"
                            android:textSize="@dimen/undefine_font_3"/>

                        <TextView
                            android:id="@+id/tv_earn_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/yellow_ffad4c"
                            android:textSize="@dimen/undefine_font_5"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/gray_b6b6b6"
                            android:textSize="@dimen/undefine_font_3"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_back_last_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingTop="2dp"
                    android:src="@mipmap/icon_btn_back_black"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="-月签到表"
                    android:textColor="@color/sub_black_custom"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/img_back_next_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="2dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:src="@mipmap/icon_go_next"
                    android:visibility="gone"/>
            </RelativeLayout>


            <View style="@style/Undefined_Line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="8.5dp"
                android:layout_marginRight="8.5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_task_center_week"
                    android:text="周日"/>

                <TextView
                    style="@style/item_task_center_week"
                    android:text="周一"/>

                <TextView
                    style="@style/item_task_center_week"
                    android:text="周二"/>

                <TextView
                    style="@style/item_task_center_week"
                    android:text="周三"/>

                <TextView
                    style="@style/item_task_center_week"
                    android:text="周四"/>

                <TextView
                    style="@style/item_task_center_week"
                    android:text="周五"/>

                <TextView
                    style="@style/item_task_center_week"
                    android:text="周六"/>
            </LinearLayout>

            <com.robin8.rb.ui.widget.OtherGridView
                android:id="@+id/gv_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="8.5dp"
                android:layout_marginRight="8.5dp"
                android:gravity="center"
                android:listSelector="@android:color/transparent"
                android:numColumns="7"
                android:verticalSpacing="6dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="18.5dp">

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_bg_circle_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="连续签到"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_ring_sub_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="间隔签到"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_custom"
        android:gravity="center"
        android:text="立即签到"
        android:textColor="@color/white_custom"
        android:textSize="@dimen/undefine_font_5"
        android:visibility="visible"/>
</RelativeLayout>