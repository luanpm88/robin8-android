<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_custom"
    android:orientation="vertical"
    tools:context=".ui.module.social.SocialInfluenceActivity">

    <include layout="@layout/social_result_title"/>

    <com.robin8.rb.ui.widget.ClashScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.robin8.rb.ui.module.social.view.LinearLayoutForListView
                android:id="@+id/lv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_custom"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:scrollingCache="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/white_custom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@mipmap/icon_algorithm_dec"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/undefine_font_2"
                    android:text="社交影响力有什么用"
                    android:textColor="@color/black_202020"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="@dimen/undefine_font_3"
                    android:textColor="@color/gray_acacac"
                    android:text="根据你的社交媒体的内容和数据，Robin8会科学的计算你的社交影响力，影响力越高，可以接收到更多高奖金的品牌邀约、福利或特权。"/>

            </LinearLayout>

        </LinearLayout>
    </com.robin8.rb.ui.widget.ClashScrollView>

</LinearLayout>
