<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/undefined_backgroud"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="@color/undefined_backgroud" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.robin8.rb.ui.widget.AlignTextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:lines="3"
            android:text="fsahksfklaghaaagreeeeeeeeeeeeeeeeeeeeee"
            android:textColor="@color/sub_gray_custom"
            android:textSize="@dimen/undefine_font_5"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="售价"
                android:textColor="@color/sub_black_custom"
                android:textSize="@dimen/undefine_font_3"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="提成"
                android:textColor="@color/sub_black_custom"
                android:textSize="@dimen/undefine_font_3"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_box_delete"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@color/cover_transparent"
        android:gravity="center"
        android:textColor="@color/white_custom"
        android:textSize="@dimen/undefine_font_a" />
</LinearLayout>