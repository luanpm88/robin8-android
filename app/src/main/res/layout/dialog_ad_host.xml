<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_corner_bg_regular"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_margin="25dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/black_5a5a5a"
                android:textSize="@dimen/undefine_font_4"/>
        </LinearLayout>

        <View
            android:id="@+id/line"
            style="@style/Undefined_Line"
            android:layout_width="280dp"/>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_bg_bottom_left_black"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_686868"
                    android:textSize="@dimen/undefine_font_4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_bg_bottom_right_blue"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_right"
                    style="@style/tv_white_with_dialog_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/undefine_font_4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>